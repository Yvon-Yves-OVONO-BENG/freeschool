{% extends 'base.html.twig' %}

{% block title %}
    {% trans %}Edit unranked coefficients{% endtrans %}
{% endblock %}

{% block subTitle %}
    {% trans %}UPDATING LIMIT COEFFICIENT/MARK{% endtrans %}
{% endblock %}
{% block infoMessage %}
    {% include "includes/_info_message.html.twig" %}
{% endblock %}

{% block currentUser %}
    {{teacher.fullName }}
{% endblock %}

{% block body %}
<!-- App-Content -->
	<div class="hor-content main-content">
		<div class="container">
        
            <!--Page header-->
            <div class="page-header">
                <div class="page-leftheader">
                    <h4 class="page-title mb-0 text-primary"></h4>
                </div>
                <div class="page-rightheader">
                    <div class="btn-list">
                        
                    </div>
                </div>
            </div>
            <div class="card border-primary">
                <div class="card-header">
                    <div class="col-md-7">
                        <span class="page-title mb-0 text-primary">
                            {% trans %}Updating coefficients/marks limit allowing to be ranked or unranked {% endtrans %}
                        </span>
                    </div>
                    <div class="col-md-3">
                        <a href="{{ path('report_defineUnrankedCoefficient') }}" class="btn btn-outline-primary btn-medium w-100 br-7">{% trans %}Show limit coefficients{% endtrans %}</a>
                    </div>
                    <div class="col-md-2">
                        <a href="{{ path('report_report') }}" class="btn btn-outline-primary btn-medium w-100 br-7">{% trans %}Reports{% endtrans %}</a>
                    </div>
                </div>
                <div class="card-body ">
                    <div class="row">
                        <div class="col-md-12">
                            <table border="1" class="table table-striped text-left">
                                <form action="{{ path('report_editUnrankedCoefficient') }}" method="post">
                                    <input type="hidden" name="level" value="{{ level }}">
                                    <input type="hidden" name="id" value="{{ id }}">
                                    <div class="row">
                                        <div class="col-md-2">{% trans %}Level{% endtrans %}</div>
                                        <div class="col-md-2">{% trans %}Limit coefficient/mark{% endtrans %}</div>
                                        <div class="col-md-2">{% trans %}Section concerned{% endtrans %}</div>
                                        <div class="col-md-2">{% trans %}Apply on{% endtrans %}</div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label class="form-control form-control-sm">
                                                    {{ levelName }}
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <input class="form-control form-control-sm"  type="number" name="coefficient" id="coefficient" min="1" step="0.5" value="{{ coefficient }}">
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <select class="form-control select2 custom-select" name="forMark" id="forMark">
                                                    <option value="0" {% if selectedUnrankedCoefficient.forMark == false %}selected{% endif %}>{% trans %}Coefficient{% endtrans %}</option>
                                                    <option value="1" {% if selectedUnrankedCoefficient.forMark == true %}selected{% endif %}>{% trans %}Mark{% endtrans %}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <select class="form-control select2 custom-select" name="application" id="application">
                                                    <option value="0" {% if selectedUnrankedCoefficient.forFirstGroup == false %}selected{% endif %}>{% trans %}All subjects{% endtrans %}</option>
                                                    <option value="1" {% if selectedUnrankedCoefficient.forFirstGroup == true %}selected{% endif %}>{% trans %}Vocational subjects{% endtrans %}</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <button class="btn btn-outline-primary btn-medium w-100 br-7" type="submit" name="unrankedCoefficientUpdated">
                                                    <i class="fa fa-save"></i>
                                                    {% trans %}Save changes{% endtrans %}</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                        
{% endblock %}
