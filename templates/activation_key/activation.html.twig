{% extends 'base.html.twig' %}

{% block title %}{% trans %}License activation !{% endtrans %}{% endblock %}

{% block body %}
        <!-- App-Content -->
        <div class="hor-content main-content">
            <div class="container">

                <!--Page header-->
                <div class="page-header">
                    <div class="page-leftheader">
                        <h4 class="page-title mb-0 text-primary">{% trans %}License activation{% endtrans %}</h4>
                    </div>
                    <div class="page-rightheader">
                        <div class="btn-list">
                            <button class="btn btn-outline-danger"><i class="fe fe-clock me-2"></i>
                                {% trans %}You have 250 days left{% endtrans %}
                            </button>
                        </div>
                    </div>
                </div>
                <!--End Page header-->

                <!--Row-->
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="card border-primary">
                            <div class="card-header">
                                <h3 class="card-title">{% trans %}Please enter your activation key{% endtrans %}</h3>
                            </div>
                            <div class="card-body">

                                <form class="row g-3 needs-validation" novalidate method="post" action="{{ path('activation_key') }}">

                                    <div class="row">
                                        <div class="col-md-2">
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" name="key"  class="form-control" id="validationCustom01" placeholder="XXXXX-XXXXX-XXXXX-XXXXX-XXXXX" required>
                                        </div>
                                        <div class="col-md-2" style="text-align: center;">
                                            <button class="btn btn-outline-primary w-lg mb-1" type="submit" name="myButton">{% trans %}Activate{% endtrans %}</button>
                                        </div>
                                        <div class="col-md-2">
                                        </div>
                                    </div>
                                    
                                </form>

                            </div>
                        </div>
                    </div>

                </div>
                <!--/Row-->

            </div>
        </div><!-- right app-content-->
    </div>
{% endblock %}
