{% extends 'base.html.twig' %}

{% block title %}{% trans %}Assumed Duty{% endtrans %}{% endblock %}

{% block subTitle %}
{% trans %}MANAGEMENT OF STARTS / RETURNS OF SERVICE AND EFFECTIVE PRESENCE{% endtrans %}
{% endblock %}

{% block body %}
<!-- App-Content -->
	<div class="hor-content main-content">
		<div class="container">
        
            <!--Page header-->
            <div class="page-header">
                <div class="page-leftheader">
                    <h4 class="page-title mb-0 text-primary"></h4>
                </div>
                <div class="page-rightheader">
                    <div class="btn-list">
                        
                    </div>
                </div>
            </div>
            <!--End Page header-->

            <div class="card border-primary">
                <div class="card-header">
                    <span class="page-title mb-0 text-primary"><i class="fa fa-file-pdf-o me-2"></i> {% trans %}Printing of service pick-ups/returns and actual presences at the post{% endtrans %}</span> 
                </div>
                <div class="card-body pt-5 ">
                    <form action="{{ path('teacher_printAssumedDuty') }}" method="post" target="_blank">
                        <div class="row">
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="teacher">{% trans %}Teacher{% endtrans %}</label>
                                    <select name="teacher" id="teacher" class="form-control select2-show-search" data-placeholder="Choisir un enseignant" required>
                                        <option label="Choisir un enseignant"></option>
                                        <option value="0">{% trans %}All teachers{% endtrans %}</option>
                                        {% for teacher in teachers %}
                                            <option value="{{ teacher.id }}">{{ teacher.fullName }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="color: #fff;">{% trans %}Print take/retake{% endtrans %}</label>
                                    <button class="btn btn-outline-primary btn-medium w-100 br-7" type="submit" name="asd">
                                        <i class="fa fa-print"></i>
                                        {% trans %}Print take/retake{% endtrans %}</button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label style="color: #fff;">{% trans %}Print effective presence{% endtrans %}</label>
                                    <button class="btn btn-outline-primary btn-medium w-100 br-7" type="submit" name="pe">
                                        <i class="fa fa-print"></i>
                                        {% trans %}Print effective presence{% endtrans %}</button>
                                </div>
                            </div>
                            <div class="col-md-1">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
