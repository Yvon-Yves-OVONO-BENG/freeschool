{% extends 'base.html.twig' %}

{% block title %}{% trans %}Rate of presence per class{% endtrans %}{% endblock %}

{% block subTitle %}
    {% trans %}STUDENTS ATTENDANCE STATUS MANAGMENT{% endtrans %}
{% endblock %}

{% block body %}    
<!-- App-Content -->
	<div class="hor-content main-content">
		<div class="container">
        
            <!--Page header-->
            <div class="page-header">
                <div class="page-leftheader">
                    <h4 class="page-title mb-0 text-primary"></h4>
                </div>
                <div class="page-rightheader">
                    <div class="btn-list">
                        
                    </div>
                </div>
            </div>
            <!--End Page header-->

            <div class="card border-primary">
                    <div class="card-header">
                        <span class="page-title mb-0 text-primary">
                            <i class="fa fa-table me-2"></i>{% trans %}Students attendance status printing{% endtrans %}
                        </span>
                    </div>
                    <div class="card-body ">
                        <form action="{{ path('statistic_printRateOfPresencePerClass') }}" method="post" target="_blank">
                            <div class="row">
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <select name="term" id="term" class="form-control select2 custom-select" data-placeholder="Choose a period" required>
                                            <option label="Choose a period"></option>
                                        <optgroup label="Trimestres">
                                            {% for term in terms %}
                                                {% if term.term != annualTerm %}
                                                    <option value="{{ term.id }}">{% trans %}Term{% endtrans %} {{ term.term }}</option>
                                                {% endif %}
                                            {% endfor %}
                                        </optgroup>
                                        {% for term in terms %}
                                            {% if term.term == annualTerm %}
                                                <option value="{{ term.id }}">{% trans %}Annual{% endtrans %}</option>
                                            {% endif %}
                                        {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <button class="btn btn-outline-primary btn-medium w-100 br-7" type="submit" name="printRateOfPresencePerClass">
                                            <i class="fa fa-print"></i>
                                            {% trans %}Print{% endtrans %}
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
