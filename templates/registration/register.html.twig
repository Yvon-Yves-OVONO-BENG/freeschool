{% extends 'baseLoggin.html.twig' %}

{% block title %}Création d'un compte{% endblock %}

{% block body %}
<body class="register1">

  <!-- Page -->
  <div class="page">
    <div class="page-main">
      
<div class="page">
  <div class="page-single">
    <div class="container">
      <div class="row">
        <div class="col mx-auto">
          <div class="row justify-content-center">
            <div class="col-xl-7 col-lg-12">
              <div class="row p-0 m-0">
                <div class="col-lg-6 p-0">
                  <div class="text-justified text-white p-5 register-1 overflow-hidden">
                      <div class="custom-content">
                          <div class="mb-5 br-7" style="text-align: center; color: #725DC6 !important;">
                              {# <img src="../../assets/images/brand/logo1.png" class="header-brand-img desktop-lgo" alt="Azea logo"> #}
                              Aux couleurs gourmandes restaurant
                          </div>
                          <div class="ms-5">
                              <div class="fs-18 mb-6 font-weight-bold text-white"  style="text-align: center;">Système de Gestion du Personnel</div>
                              <div class="mb-6 text-white-50"  style="text-align: center;">
                                  Créez votre compte en moins d'une minute.
                              </div>
                              <h6 class="text-white-50" style="text-align: center; color: #725DC6 !important;">Vous n'avez pas encore de compte ?</h6>
                              <div class="mb-6 text-white-50"  style="text-align: center;">
                                  <a href="{{ path('home_chooseSchoolYear') }}" class="btn btn-white text-primary text-transparent font-weight-bold " style="text-align: center;"><i class="fa fa-home"></i> Accueil</a>
                              </div>

                              <h6 class="text-white-50" style="text-align: center;">Vous avez déjà un compte ?</h6>
                              <div class="mb-6 text-white-50"  style="text-align: center;">
                                  <a href="{{ path('login') }}" class="btn btn-white text-primary text-transparent font-weight-bold " style="text-align: center;"><i class="fa fa-unlock"></i> Connectez-vous ici</a>
                              </div>
                              
                          </div>
                      </div>
                  </div>
              </div>
                <div class="col-md-8 col-lg-6 p-0 mx-auto">
                  <div class="bg-white  text-dark br-7 br-tl-0 br-bl-0 border-primary">
                    <div class="card-body">
                      <div class="text-center mb-3">
                        <h1 class="mb-2">Compte</h1>
                        <a href="javascript:void(0);" class="">Création d'un nouveau compte</a>
                      </div>
                      {{ form_start(registrationForm,{'attr': {'class': 'needs-validation'}}) }}
                      {# <form class="mt-5" method="post" action="{{ path('register') }}"> #}
                        <div class="input-group mb-4">
                            <div class="input-group-text">
                              <i class="fe fe-user"></i>
                            </div>
                          {{ form_widget(registrationForm.fullName,{'attr': {'class': 'form-control ie7-margin'}}) }}
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-text">
                              <i class="fe fe-mail"></i>
                            </div>
                            {# {{ form_widget(registrationForm.email,{'attr': {'class': 'form-control ie7-margin'}}) }} #}
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-text">
                                <i class="fe fe-phone-call"></i>
                            </div>
                            {# {{ form_widget(registrationForm.telephone,{'attr': {'class': 'form-control ie7-margin'}}) }} #}
                        </div>
                        <div class="input-group mb-4">
                          <div class="input-group" id="Password-toggle">
                              <a href="" class="input-group-text">
                              <i class="fe fe-eye" aria-hidden="true"></i>
                              </a>
                            {{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form-control ie7-margin'}}) }}
                          </div>
                        </div>
                        <div class="input-group mb-4">
                          <div class="input-group" id="Password-toggle1">
                            <a href="" class="input-group-text">
                              <i class="fe fe-eye" aria-hidden="true"></i>
                            </a>
                            {# {{ form_widget(registrationForm.confirmationPassword,{'attr': {'class': 'form-control ie7-margin'}}) }} #}
                          </div>
                        </div>
                        <div class="input-group mb-4">
                          <label for="validationCustom05" class="form-label">Photo <span class="form-help" data-bs-toggle="tooltip" data-bs-placement="top"
															title="Si vous n'avez pas photo, laisser vide">?
																</span></label>
                          {# {{ form_row(registrationForm.imageFile) }} #}
                            <div class="invalid-feedback">
                            Please provide a valid city.
                            </div>
                        </div>
                        <div class="form-group">
                          
                        </div>
                        <div class="form-group text-center mb-3">
                          <button class="btn btn-outline-primary btn-lg w-100 br-7" type="submit" name="creeMonCompte">Je crée mon compte</button>
                        </div>
                        <div class="form-group fs-12 text-center">
                          
                        </div>

                      {# </form> #}

                      {{ form_end(registrationForm) }}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
  
      <script>
        // Check selected custom option
        window.Helpers.initCustomOptionCheck();
      </script>
{% endblock %}
