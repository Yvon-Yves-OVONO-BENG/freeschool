{% extends 'base.html.twig' %}

{% block title %}{% trans %}Display best results of the year{% endtrans %}{% endblock %}

{% block subTitle %}
    {% trans %}BEST STUDENTS{% endtrans %}
{% endblock %}

{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}

        td {
			font-size: 12px !important;
			text-align: center !important;
		}
	</style>
{% endblock %}

{% block body %}    
<!-- App-Content -->
	<div class="hor-content main-content">
		<div class="container">
        
            <!--Page header-->
            <div class="page-header">
                <div class="page-leftheader">
                    <h4 class="page-title mb-0 text-primary"></h4>
                </div>
                <div class="page-rightheader">
                    <div class="btn-list">
                        
                    </div>
                </div>
            </div>
            <!--End Page header-->

            <div class="card border-primary">
                <div class="card-header">
                    {% if level != null %}
                        <div class="card-title">{% trans %}Best students of level{% endtrans %} :  <span class="badge bg-primary">{{ level.level }}</span></div>
                        {% else %}
                        <div class="card-title">{% trans %}Best students of classroom{% endtrans %} : <span class="badge bg-primary">{{ classroom.classroom }}</span> </div>
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="">
                        <div class="table-responsive">
                            <table id="example" class="table table-bordered text-nowrap key-buttons">
                                <thead>
                                    <tr>
                                        <th class="border-bottom-0">{% trans %}Full name{% endtrans %}</th>
                                        <th class="border-bottom-0">{% trans %}Sex{% endtrans %}</th>
                                        <th class="border-bottom-0">{% trans %}Average{% endtrans %}</th>
                                        <th class="border-bottom-0">{% trans %}Class{% endtrans %}</th>
                                        <th class="border-bottom-0">{% trans %}Date of birth{% endtrans %}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for student in students %}
                                    
                                        <tr>
                                            <td style="text-align: left !important;">{{ student.student.fullName }}</td>
                                            <td>{{ student.student.sex.sex }}</td>
                                            <td>{{ student.moyenne|number_format(2) }}</td>
                                            <td>{{ student.student.classroom.classroom }}</td>
                                            <td>{{ student.student.birthday|date('d/m/Y') }}</td>
                                        </tr>

                                    {% endfor %}
                                    
                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!--/div-->
        </div>
    </div>
</div>
{% endblock %}
