                                            <thead>
                                                <tr>
                                                    <td class="intitule"></td>
                                                    <td class="intitule">{% trans %}Smaller note{% endtrans %}</td>
                                                    <td class="intitule">{% trans %}Highest note{% endtrans %}</td>
                                                    <td class="intitule">{% trans %}Number of sub-average{% endtrans %}</td>
                                                    <td class="intitule">{% trans %}Number of average{% endtrans %}</td>
                                                    <td class="intitule">{% trans %}Effective{% endtrans %}</td>
                                                    <td class="intitule">{% trans %}Classified{% endtrans %}</td>
                                                    <td class="intitule">{% trans %}Success rate{% endtrans %}</td>
                                                </tr>
                                            </thead>
                                            {% if (nombreSousMoyenneFille + nombreMoyenneFille != 0) or (nombreSousMoyenneGarcon + nombreMoyenneGarcon != 0) %}
                                                <tbody>
                                                    <tr>
                                                        <td class="intitule">1.{% trans %}Girls{% endtrans %}</td>
                                                        <td>{{ noteMinMax[0]['minMarkGirls'] }}</td>
                                                        <td>{{ noteMinMax[0]['maxMarkGirls'] }}</td>
                                                        <td>{{ nombreSousMoyenneFille }}</td>
                                                        <td>{{ nombreMoyenneFille }}</td>
                                                        <td>{{ filles }}</td>
                                                        <td>{{ nombreSousMoyenneFille + nombreMoyenneFille }}</td>
                                                        
                                                        <td class="intitule">
                                                            {% if (nombreSousMoyenneFille + nombreMoyenneFille) == 0 %}
                                                                // <br>
                                                                {% else %}
                                                                {{ ((nombreMoyenneFille / (nombreSousMoyenneFille + nombreMoyenneFille)) * 100)|number_format(2, ',', '')   }} % <br>
                                                                {% set pourcentage = (((nombreMoyenneFille) / (nombreSousMoyenneFille + nombreMoyenneFille)) * 100)|number_format(2, ',', '') %}
                                                            
                                                                {% include "includes/_pourcentage.html.twig" %}
                                                            {% endif %}
                                                            
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="intitule">2. {% trans %}Boys{% endtrans %}</td>
                                                        <td>{{ noteMinMax[0]['minMarkBoys'] }}</td>
                                                        <td>{{ noteMinMax[0]['maxMarkBoys'] }}</td>
                                                        <td>{{ nombreSousMoyenneGarcon }}</td>
                                                        <td>{{ nombreMoyenneGarcon }}</td>
                                                        <td>{{ garcons }}</td>
                                                        <td>{{ nombreSousMoyenneGarcon + nombreMoyenneGarcon }}</td>
                                                        <td class="intitule">
                                                            {% if (nombreSousMoyenneGarcon + nombreMoyenneGarcon) == 0 %}
                                                                //
                                                                {% else %}
                                                                {{ ((nombreMoyenneGarcon / (nombreSousMoyenneGarcon + nombreMoyenneGarcon)) * 100)|number_format(2, ',', '')}} % <br>
                                                                {% set pourcentage = (((nombreMoyenneGarcon) / (nombreSousMoyenneGarcon + nombreMoyenneGarcon)) * 100)|number_format(2, ',', '') %}
                                                                {% include "includes/_pourcentage.html.twig" %}
                                                            {% endif %}
                                                            

                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td class="intitule">3. {% trans %}Classroom{% endtrans %}</td>
                                                        {% if noteMinMax[0]['minMarkBoys'] < noteMinMax[0]['minMarkGirls'] %}
                                                            <td class="intitule">{{ noteMinMax[0]['minMarkBoys'] }}</td>
                                                            {% else %}
                                                            <td class="intitule">{{ noteMinMax[0]['minMarkGirls'] }}</td>
                                                        {% endif %}

                                                        <td class="intitule">{{ noteMinMax[0]['maxMarkClass'] }}</td>
                                                        <td class="intitule">{{ nombreSousMoyenneFille + nombreSousMoyenneGarcon }}</td>
                                                        <td class="intitule">{{ nombreMoyenneFille + nombreMoyenneGarcon }}</td>
                                                        <td class="intitule">{{ filles + garcons }}</td>
                                                        <td class="intitule">{{ nombreSousMoyenneFille + nombreSousMoyenneGarcon + nombreMoyenneFille + nombreMoyenneGarcon  }}</td>
                                                        
                                                        <td class="intitule">
                                                            {% if (nombreSousMoyenneFille + nombreMoyenneFille + nombreSousMoyenneGarcon + nombreMoyenneGarcon) == 0 %}
                                                                //
                                                                {% else %}
                                                                {{ (((nombreMoyenneFille + nombreMoyenneGarcon) / (nombreSousMoyenneFille + nombreMoyenneFille + nombreSousMoyenneGarcon + nombreMoyenneGarcon)) * 100)|number_format(2, ',', '') }} % <br>
                                                                {% set pourcentage = (((nombreMoyenneFille + nombreMoyenneGarcon) / (nombreSousMoyenneFille + nombreMoyenneFille + nombreSousMoyenneGarcon + nombreMoyenneGarcon)) * 100)|number_format(2, ',', '') %}
                                                            
                                                                {% include "includes/_pourcentage.html.twig" %}
                                                            {% endif %}
                                                            
                                                        </td>
                                                    </tr>
                                                </tbody>
                                                {% else %}
                                                <tbody>
                                                    <tr>
                                                        <td class="intitule">1.{% trans %}Girls{% endtrans %}</td>
                                                        <td>//</td>
                                                        <td>//</td>
                                                        <td>//</td>
                                                        <td>//</td>
                                                        <td>{{ filles }}</td>
                                                        <td>//</td>
                                                        
                                                        <td class="intitule">//</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="intitule">2. {% trans %}Boys{% endtrans %}</td>
                                                        <td>//</td>
                                                        <td>//</td>
                                                        <td>//</td>
                                                        <td>//</td>
                                                        <td>{{ garcons }}</td>
                                                        <td>//</td>
                                                        <td class="intitule">//</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="intitule">3. {% trans %}Classroom{% endtrans %}</td>
                                                        <td class="intitule">//</td>
                                                        <td class="intitule">//</td>
                                                        <td class="intitule">//</td>
                                                        <td class="intitule">//</td>
                                                        <td class="intitule">{{ filles + garcons }}</td>
                                                        <td class="intitule">//</td>
                                                        
                                                        <td class="intitule">//</td>
                                                    </tr>
                                                </tbody>
                                            {% endif %}
                                            
                                        </table>
                                        <div class="row mb-5">
                                            
                                            
                                        </div>
                                        <div class="row mb-5">
                                            <div class="col-md-2 text-right mt-1">
                                                <h3 class="text-blue"><span class="badge bg-primary"><b>{% trans %}Target skill{% endtrans %}</b> </span></h3>
                                            </div>
                                            <div class="col-md-8">
                                                {# <input type="text" readonly="readonly" value="{{ skill.skill }}"  class="form-control" > #}
                                                <input type="text" readonly="readonly" value="{{ skill ? skill.skill : '//'}}"  class="form-control" >
                                            </div>
                                            <div class="col-md-2">
                                                {% if mySession.get('verrou').verrou is not null and mySession.get('verrou').verrou == 0 %}
                                                    <form action="{{ path('evaluation_markRecorder', { 'slugTeacher': teacher.slug }) }}" method="post">
                                                        <input type="hidden" name="sequence" value="{{ selectedSequence.id }}">
                                                        <input type="hidden" name="lesson" value="{{ selectedLesson.id }}">
                                                        <input type="hidden" name="oldSkill" value="{{ skill ? skill.skill : "//" }}">

                                                        <button type="submit" class="btn btn-outline-primary" data-bs-toggle="tooltip" title="Modifier la compétence visée" name="skillToUpdate">
                                                            <i class="fa fa-pencil-square-o"></i>
                                                        </button>
                                                </form>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <table border="1" class="table table-striped" border="2" id="dataTable" width="100%" cellspacing="0">
                                                    <thead>
                                                        <tr>
                                                            <th class="border-bottom-0 indigo-gradient">{% trans %}N°{% endtrans %}</th>
                                                            <th class="border-bottom-0 green-gradient">{% trans %}Full name{% endtrans %}</th>
                                                            <th class="border-bottom-0 orange-gradient">{% trans %}Note/20{% endtrans %}</th>
                                                            {% if is_granted('ROLE_ADMIN') or is_granted ('ROLE_SUPER_ADMIN') %}
                                                                <th class="border-bottom-0 blue-gradient">{% trans %}Entered by{% endtrans %}</th>
                                                                <th class="border-bottom-0 blue-gradient">{% trans %}Update by{% endtrans %}</th>
                                                            {% endif %}
                                                            <th class="border-bottom-0 blue-gradient">{% trans %}Actions{% endtrans %}</th>
                                                            
                                                        </tr>
                                                    </thead>
                                                    <tfoot>
                                                        <tr>
                                                            <th class="border-bottom-0 indigo-gradient">{% trans %}N°{% endtrans %}</th>
                                                            <th class="border-bottom-0 green-gradient">{% trans %}Full name{% endtrans %}</th>
                                                            <th class="border-bottom-0 orange-gradient">{% trans %}Note/20{% endtrans %}</th>
                                                            {% if is_granted('ROLE_ADMIN') or is_granted ('ROLE_SUPER_ADMIN') %}
                                                                <th class="border-bottom-0 blue-gradient">{% trans %}Entered by{% endtrans %}</th>
                                                                <th class="border-bottom-0 blue-gradient">{% trans %}Update by{% endtrans %}</th>
                                                            {% endif %}
                                                            <th class="border-bottom-0 blue-gradient">{% trans %}Actions{% endtrans %}</th>
                                                        </tr>
                                                    </tfoot>
                                                    {% set i = 1 %}
                                                    {% for evaluation in evaluations %}
                                                        <tr class="table-row">
                                                            {# <td>
                                                                <input type="hidden" name="student{{i}}" value="{{ evaluation.student.id }}">
                                                            </td> #}
                                                            <td style="text-align: center; vertical-align:middle;">{{ i }}</td>
                                                            <td style="text-align:left !important; vertical-align:middle;">
                                                                {{ evaluation.student.fullName }}
                                                            </td>
                                                            <td>
                                                                <input type="text" name="mark{{i}}" readonly="readonly" class="form-control"
                                                                    {% if evaluation.mark == unrankedMark %}
                                                                        value="/"
                                                                    {% else %}
                                                                        value="{{ evaluation.mark }}"
                                                                    {% endif %}
                                                                >
                                                            </td>
                                                          
                                                            {% if is_granted('ROLE_ADMIN') or is_granted ('ROLE_SUPER_ADMIN') %}
                                                                <td class="border-bottom-0 blue-gradient">{{ evaluation.createdBy.fullName }} <br>
                                                                    {% trans %}At{% endtrans %} : {{ evaluation.createdAt|date('d/m/Y') }} - {{ evaluation.createdAt|date('H:i:s') }}
                                                                </td>
                                                                <td class="border-bottom-0 blue-gradient">{{ evaluation.updatedBy ? evaluation.updatedBy.fullName : "//" }} <br>
                                                                    {% trans %}At{% endtrans %} : {{ evaluation.updatedBy ? evaluation.updatedAt|date('d/m/Y') : "//"}} - {{ evaluation.updatedBy ? evaluation.updatedAt|date('H:i:s'): "//"}}
                                                                </td>
                                                            {% endif %}
                                                            
                                                            {% if mySession.get('verrou').verrou is not null and mySession.get('verrou').verrou == 0 %}
                                                                <td style="text-align: center; vertical-align:middle;">
                                                                    <form action="{{ path('evaluation_markRecorder', {'slugTeacher': teacher.slug}) }}" method="post">
                                                                        <input type="hidden" name="evaluation" value="{{ evaluation.id }}">
                                                                        <input type="hidden" name="lesson" value="{{ selectedLesson.id }}">
                                                                        <input type="hidden" name="sequence" value="{{ selectedSequence.id }}">

                                                                        <button type="submit" class="btn btn-outline-primary" data-bs-toggle="tooltip" title="Modifier la note de {{ evaluation.student.fullName }}" name="markToUpdate">
                                                                            <i class="fa fa-pencil-square-o"></i>
                                                                        </button>

                                                                    </form>
                                                                </td>
                                                            {% endif %}
                                                        </tr>
                                                        {% set i = i+1 %}
                                                    {% endfor %}
                                                </table>
                                            </div>
                                        </div>
                                        {# fin affichage de la liste des elèves si les notes existent deja #}
                                    {% else %}
                                        {# affichage de la liste des elèves si les notes n'existent pas encore #}
                                        {% if not is_granted('ROLE_ADMIN') or is_granted ('ROLE_SUPER_ADMIN') %}
                                            <div class="row">
                                                <div class="col-md-12">
                                                {% if mySession.get('verrou').verrou is not null and mySession.get('verrou').verrou == 0 %}
                                                    <form action="{{ path('evaluation_markRecorder', {'slugTeacher': teacher.slug}) }}" method="POST" onreset="return confirm('Do you want to reset all typed marks ?')">  
                                                        <input type="hidden" name="numberOfStudents" value="{{ students|length }}">
                                                        <input type="hidden" name="sequence" value="{{ selectedSequence.id }}">
                                                        <input type="hidden" name="lesson" value="{{ selectedLesson.id }}">
                                                        <div class="row mb-5">
                                                            {% if skill is not null %}
                                                                <div class="col-md-2 text-left mt-1">
                                                                    <h3 class="text-blue"><span class="badge bg-primary"><b>{% trans %}Target skill{% endtrans %}</b> </span></h3>
                                                                </div>
                                                                <div class="col-md-10">
                                                                    {# {{ skill.skill }}  #}
                                                                    <input type="text" readonly="readonly" value="{{ skill.skill }}"  class="form-control" >
                                                                </div>
                                                                {% else %}
                                                                <div class="col-md-2 text-left mt-1">
                                                                    <label for="skill">
                                                                        <h3 class="text-blue"><span class="badge bg-primary"><b>{% trans %}Evaluation :{% endtrans %} {{ selectedSequence.sequence }}</b> </span></h3>
                                                                    </label>
                                                                </div>
                                                                <div class="col-md-4 text-left mt-1">
                                                                    <label for="skill">
                                                                        <h3 class="text-blue"><span class="badge bg-primary"><b>{% trans %}Lesson : {% endtrans %} {{ selectedLesson.subject.subject}} --- {{selectedLesson.classroom.classroom}}</b> </span></h3>
                                                                    </label>
                                                                </div>
                                                                <div class="col-md-2 text-right mt-1">
                                                                    <label for="skill">
                                                                        <h3 class="text-blue"><span class="badge bg-primary"><b>{% trans %}Target skill{% endtrans %}</b> </span></h3>
                                                                    </label>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <input type="text" name="skill" id="skill" maxlength="47" class="form-control" required autofocus>
                                                                </div>
                                                                
                                                            {% endif %}

                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <table border="1" class="table table-striped text-left" border="2">
                                                                    <thead>
                                                                    <tr>
                                                                        <th class="border-bottom-0 indigo-gradient">{% trans %}N°{% endtrans %}</th>
                                                                        <th class="border-bottom-0 green-gradient" colspan="2">{% trans %}Full name{% endtrans %}</th>
                                                                        <th class="border-bottom-0 orange-gradient">{% trans %}Note/20{% endtrans %}</th>
                                                                    </tr>
                                                                </thead>
                                                                <tfoot>
                                                                    <tr>
                                                                        <th class="border-bottom-0 indigo-gradient">{% trans %}N°{% endtrans %}</th>
                                                                        <th class="border-bottom-0 green-gradient" colspan="2">{% trans %}Full name{% endtrans %}</th>
                                                                        <th class="border-bottom-0 orange-gradient">{% trans %}Note/20{% endtrans %}</th>
                                                                    </tr>
                                                                </tfoot>
                                                                {% set i = 1 %}
                                                                {% for student in students %}
                                                                    <tr class="table-row">
                                                                        <td style="text-align:center !important; vertical-align: middle !important;">{{ i }}</td>
                                                                        <td style="text-align:center !important; vertical-align: middle !important;">
                                                                            <input type="hidden" name="student{{i}}" value="{{ student.id }}">
                                                                        </td>
                                                                        <td style="vertical-align: middle !important;">
                                                                            {{ student.fullName }}
                                                                        </td>
                                                                        <td style="text-align:center !important; vertical-align: middle !important;">
                                                                            <input type="number" name="mark{{i}}" required="required" min="0" max="20" step="0.01" class="form-control">
                                                                        </td>
                                                                    </tr>
                                                                    {% set i = i+1 %}
                                                                {% endfor %}
                                                                </table>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-3">
                                                                <button type="reset" class="btn btn-outline-danger btn-medium w-100 br-7">
                                                                    <i class="fa fa-eraser"></i>
                                                                    {% trans %}Erase everything{% endtrans %}
                                                                </button>
                                                            </div>
                                                            <div class="col-md-6">
                                                            </div>
                                                            <div class="col-md-3">
                                                                <button type="submit" class="btn btn-outline-primary btn-medium w-100 br-7" name="saveMark" id="soumission" onclick='btnSoumission(soumission)'>
                                                                    <i class="fe fe-save"></i> {% trans %}Save{% endtrans %}
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </form>
                                                    {% else %}
                                                    {% trans %}Access denied. The entry of grades counting for this quarter is locked{% endtrans %}
                                                {% endif %}
                                                
                                                </div>
                                            </div>
                                        {% else %}
                                            <div class="row">
                                                <div class="col-md-12 text-center">
                                                    {% trans %}These notes are not yet entered by the teacher{% endtrans %}
                                                </div>
                                            </div>
                                        {% endif %}
                                        
                                    {% endif %}
                                    {# fin affichage de la liste des elèves si les notes n'existent pas encore #}
                                {% elseif skillToUpdate != null %}
                                    {# affichage du formulaire de modification de la compétence #}
                                    {% if mySession.get('verrou').verrou is not null and mySession.get('verrou').verrou == 0 %}
                                        <form action="{{ path('evaluation_markRecorder', {'slugTeacher': teacher.slug}) }}" method="post">
                                            <input type="hidden" name="sequence" value="{{ selectedSequence.id }}">
                                            <input type="hidden" name="lesson" value="{{ selectedLesson.id }}">
                                            <input type="hidden" name="oldSkillId" value="{{ skillToUpdate.id }}">

                                            <div class="row mb-5">
                                                <div class="col-md-2 text-right mt-1">
                                                    <h3 class="text-blue"><span class="badge bg-primary"><b>{% trans %}Target skill{% endtrans %}</b> </span></h3>
                                                </div>
                                                <div class="col-md-8">
                                                    <input type="text" name="newSkill" value="{{ skillToUpdate.skill }}" maxlength="47" class="form-control">
                                                </div>
                                                <div class="col-md-2">
                                                    <button type="submit" class="btn btn-outline-primary btn-medium w-100 br-7" name="updateSkill">
                                                        <i class="fa fa-save"></i>
                                                        {% trans %}Save Changes{% endtrans %}
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    {% endif %}
                                    {# fin affichage du formulaire de modification de la compétence #}
                                {% else %}
                                    {# affichage du formulaire de modification d'une note #}
                                    {% if mySession.get('verrou').verrou is not null and mySession.get('verrou').verrou == 0 %}
                                        <form action="{{ path('evaluation_markRecorder', {'slugTeacher': teacher.slug}) }}" method="post">
                                            <input type="hidden" name="lesson" value="{{ selectedLesson.id }}">
                                            <input type="hidden" name="sequence" value="{{ selectedSequence.id }}">
                                            <input type="hidden" name="evaluationToUpdate" value="{{ evaluationToUpdate.id }}">
                                            <div class="row mb-5 mt-5">
                                                <div class="col-md-6 text-right mt-2">
                                                    <h4 class="text-blue"><span class="badge bg-primary">{{ evaluationToUpdate.student.fullName }}</span></h4>
                                                    
                                                </div>
                                                <div class="col-md-2 text-left">
                                                    <input type="number" name="mark" required="required" min="0" max="20" step="0.01" value="{{ evaluationToUpdate.mark }}" class="form-control">
                                                </div>
                                                <div class="col-md-3">
                                                    <button type="submit" class="btn btn-outline-primary btn-medium w-100 br-7" name="updateMark">
                                                        <i class="fa fa-save me-2"></i>
                                                        {% trans %}Save Changes{% endtrans %}
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    {% endif %}
                                    {# fin affichage du formulaire de modification d'une note #}
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
