{% extends 'base.html.twig' %}

{% block title %}{% trans %}Generate QR Code{% endtrans %}{% endblock %}

{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}
	</style>
{% endblock %}

{% block body %}
<!-- App-Content -->
	<div class="hor-content main-content">
		<div class="container">
        
            <!--Page header-->
            <div class="page-header">
                <div class="page-leftheader">
                    <h4 class="page-title mb-0 text-primary">
                        <i class="fa fa-qrcode me-2"></i> {% trans %}GENERATE QR CODE{% endtrans %}
                    </h4>
                </div>
                <div class="page-rightheader">
                    <div class="btn-list">
                        <a href="{{ path('report_defineUnrankedCoefficient') }}" class="btn btn-outline-primary">
                            <i class="fe fe-activity me-2"></i> 
                            {% trans %}Update limits coefficients{% endtrans %}
                        </a>
                    </div>

                </div>
            </div>
            <!--End Page header-->

            <!-- Row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="expanel expanel-primary border-primary">
                        <div class="expanel-heading">
                            <h3 class="expanel-title">{% trans %}Choose a class{% endtrans %}</h3>
                        </div>
                        <div class="expanel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <form action="{{ path('generation_qr_code') }}" method="post">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <select class="form-control select2-show-search" data-placeholder="Choose a classroom" name="classroomId" id="classroom" required style="border: 1px solid #0f0;">
                                                        <option label="Choose a classroom">{% trans %}Choose a class{% endtrans %}</option>
                                                        
                                                        {% if subSystem == 'Francophone / French Speaker' %}
                                                            {% if school.education.education == 'Général' %}
                                                                {% include "includes/_selectClassrooms.html.twig" %}
                                                                {% else %}
                                                                    {% include "includes/_selectClassroomsTech.html.twig" %}
                                                            {% endif %}
                                                            {% else %}
                                                                {% include "includes/_selectClassroomsEn.html.twig" %}
                                                        {% endif %}

                                                    </select>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <button class="btn btn-outline-primary btn-medium w-100 br-7" type="submit" name="displayStudents">
                                                        <i class="fa fa-qrcode me-2"></i>
                                                        {% trans %}Generate{% endtrans %}
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        
                                    </form>
                                </div>
                               
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
			
        </div>
    </div>
</div>

{% endblock %}
