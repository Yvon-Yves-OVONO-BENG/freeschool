{% extends 'base.html.twig' %}

{% block title %}{% trans %}Note entry{% endtrans %}{% endblock %}

{% block subTitle %}
    {% trans %}NOTE MANAGEMENT{% endtrans %}
    {% if is_granted ('ROLE_ADMIN') or is_granted ('ROLE_SUPER_ADMIN') %}
         {% trans %}OF{% endtrans %} [ {{teacher.fullName }} ]
    {% endif %}
{% endblock %}
{% block infoMessage %}
    {% include "includes/_info_message.html.twig" %}
{% endblock %}

{% block currentUser %}
    {{teacher.fullName }}
{% endblock %}

{% block stylesheets %}
    <style>
        input{
            background-color: rgba(62, 128, 235, 0.2) !important;
            color: #3e80eb !important;
        }
        th{
            text-align: center !important;
            font-weight : bold !important;
            background-color: rgba(200,200, 200, 0.2) !important;
        }

        th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}

        td {
			font-size: 12px !important;
			text-align: center !important;
		}

        .intitule {
            font-weight: bold !important;
            background-color: rgba(200, 200, 200) !important;
        }
    </style>
{% endblock %}


{% block body %}
  <!-- App-Content -->
	<div class="hor-content main-content">
		<div class="container">
        
            <!--Page header-->
            <div class="page-header">
                <div class="page-leftheader">
                    <h4 class="page-title mb-0 text-primary"><i class="fe fe-edit me-2"></i> {% trans %}Mark recorder{% endtrans %} - {{ teacher.fullName }}</h4>
                </div>
                <div class="page-rightheader">
                    <div class="btn-list">
                        
                    </div>
                </div>
            </div>
            <!--End Page header-->
            <div class="card border-primary">
                <div class="card-header pt-5">
                    <div class="col-md-12">
                        <form action="{{ path('evaluation_markRecorder', {'slugTeacher': teacher.slug}) }}" method="post">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <select name="sequence" id="sequence" class="form-control select2 custom-select" data-placeholder="Choisir une période" required="required">
                                            <option label="Choisir une période"></option>
                                            {% for sequence in sequences %}
                                                <option value="{{ sequence.id }}" 
                                                {% if selectedSequence is defined %}
                                                    {% if selectedSequence.id == sequence.id %}
                                                        selected
                                                    {% endif %}
                                                {% endif %}
                                                >
                                                {% trans %}Evaluation{% endtrans %} {{sequence.sequence}}
                                                </option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group" >
                                        <select name="lesson" id="lesson" class="form-control select2 custom-select" data-placeholder="Choisir un cours" required="required">
                                            <option label="Choisir un cours"></option>
                                                {% for lesson in lessons %}
                                                    <option value="{{lesson.id}}"
                                                    {% if selectedLesson is defined %}
                                                        {% if selectedLesson.id == lesson.id %}
                                                            selected
                                                        {% endif %}
                                                    {% endif %}
                                                    >
                                                        {{lesson.subject.subject}} --- {{lesson.classroom.classroom}}
                                                    </option>
                                                {% endfor %}
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <button class="btn btn-outline-primary btn-medium w-100 br-7" type="submit" name="displayMarkRecorder">
                                            <i class="fa fa-eye me-2"></i>
                                            {% trans %}Display{% endtrans %}
                                        </button>
                                    </div>
                                </div>

                                {% if selectedSequence is defined %}
                                    {% if not is_granted('ROLE_ADMIN') or is_granted ('ROLE_SUPER_ADMIN') %}
                                        {% if evaluations|length == 0  and evaluationToUpdate == null and skillToUpdate == null %}
                                            {# Si les notes sont déjà saisies #}
                                            {% if mySession.get('verrou').verrou is not null and mySession.get('verrou').verrou == 0 %}
                                                {# Si le verrou n'est pas activé #}
                                            
                                                <div class="col-md-2 text-right">
                                                    <form action="{{ path('evaluation_markRecorder', {'slugTeacher': teacher.slug}) }}" method="POST" onreset="return confirm('{% trans %}Do you want to reset all typed marks ?{% endtrans %}')">  
                                                        <input type="hidden" name="numberOfStudents" value="{{ students|length }}">

                                                        <input type="hidden" name="sequence" value="{{ selectedSequence.id }}">

                                                        <input type="hidden" name="lesson" value="{{ selectedLesson.id }}">

                                                        <button type="submit" class="btn btn-outline-danger btn-medium w-100 br-7" name="saveNotEvaluatedMark">
                                                            <i class="si si-close"></i> {% trans %}Not assessed{% endtrans %}
                                                        </button>
                                                    </form>
                                                </div>

                                                <div class="col-md-2">
                                                    <button type="button" class="btn btn-primary mb-1 me-3">
                                                        <span>{% trans %}Effective{% endtrans %}</span>
                                                        <span class="badge bg-white text-dark rounded-pill">{{ students|length }}</span>
                                                    </button>
                                                </div>
                                                
                                            {% endif %}
                                            {% else %}
                                            <div class="col-md-4" style="vertical-align:middle;">

                                                <a class="btn btn-outline-danger btn-medium w-100 br-7" href="javascript:void(0);" 
                                                    onclick="swal({
                                                        'title': '{% trans %}Warning !{% endtrans %}', 
                                                        'type': 'warning', 
                                                        'text': '{% trans %}Do you want to delete assessment ?{% endtrans %}', 
                                                        'showCancelButton': true, 
                                                        'confirmButtonText': '{% trans %}YES{% endtrans %}', 
                                                        'confirmButtonColor': '#f00', 
                                                        'cancelButtonText': '{% trans %}NO{% endtrans %}', 
                                                        'cancelButtonColor': '#207C08', 
                                                        'confirmButtonPath': '{{ path('evaluation_markRecorder', {'slugTeacher': teacher.slug, 'deleteAllMarks': 1, 'sequenceSelectionnee': selectedSequence.sequence, 'lessonSelectionnee': selectedLesson.id }) }} '});">
                                                    <i class="fa fa-trash me-2"></i>
                                                    {% trans %}Delete assessment N° {% endtrans %} {{ selectedSequence.sequence }}
                                                        
                                                </a>
                                                
                                            </div>
                                        {% endif %}
                                    {% endif %}
                                {% endif %}

                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {% if selectedSequence is defined %}
                {% if not is_granted('ROLE_ADMIN') or is_granted ('ROLE_SUPER_ADMIN') %}
                    {% if evaluations|length > 0  and evaluationToUpdate == null and skillToUpdate == null %}
                        {# Si les notes sont déjà saisies #}
                        {% if mySession.get('verrou').verrou is not null and mySession.get('verrou').verrou == 0 %}
                            {# Si le verrou n'est pas activé #}
                            <div class="card border-primary">
                                <div class="card-body pt-5 text-center">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <button type="button" class="btn btn-primary mb-1">
                                                <span>{% trans %}Evaluation : {% endtrans %} </span>
                                                <span class="badge bg-white text-dark">{{ selectedSequence.sequence }}</span>
                                            </button>

                                            <button type="button" class="btn btn-primary mb-1">
                                                <span>{% trans %}Lesson : {% endtrans %} </span>
                                                <span class="badge bg-white text-dark">{{selectedLesson.subject.subject}} --- {{selectedLesson.classroom.classroom}}</span>
                                            </button>
                                        </div>

                                        <div class="col-md-8">
                                            <form action="{{ path('evaluation_markRecorder', {'slugTeacher': teacher.slug}) }}" method="post">
                                                <input type="hidden" name="sequence" value="{{ selectedSequence.id }}">
                                                <input type="hidden" name="lesson" value="{{ selectedLesson.id }}">
                                                <div class="row mt-1">
                                                    <div class="col-md-6">
                                                        <button type="button" class="btn btn-danger mb-1">
                                                            <span>{% trans %}Recontribute the marks to this evaluation{% endtrans %}</span>
                                                            <span class="badge bg-white text-dark"><i class="fa fa-fw fa-hand-o-right" style="color: #007f7f;"></i></span>
                                                        </button>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <select name="newSequence" id="sequence" class="form-control select2 custom-select" required="required">
                                                            <option value="">{% trans %}Choose{% endtrans %}</option>

                                                            {% for sequence in sequences %}
                                                                {% if sequence.sequence > selectedSequence.sequence %}
                                                                    <option value="{{ sequence.id }}">
                                                                    {% trans %}Evaluation{% endtrans %} {{ sequence.sequence }}
                                                                    </option>
                                                                {% endif %}
                                                            {% endfor %}
                                                        </select>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <button type="submit" class="btn btn-outline-primary btn-medium w-100 br-7" name="renewMark">
                                                            <i class="fa fa-arrow-right"></i>
                                                            {% trans %}Renew{% endtrans %}
                                                        </button>
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        {% endif %}
                {% endif %}
            {% endif %}

                <div class="card border-primary">
                            
                    <div class="card-body">
                        {% if selectedSequence is defined %}
                            {% if students|length > 0 %}
                                {# affichage de la liste des elèves #}
                                {% if evaluationToUpdate == null and skillToUpdate == null %}
                                    {% if evaluations|length > 0 %}
                                        {# affichage de la liste des elèves si les notes existent déjà #}
                                        {% set filles = 0 %}
                                        {% set garcons = 0 %}

                                        {% for student in students %}
                                            {% if student.sex.sex == "F" %}
                                                {% set filles = filles + 1 %}
                                                {% else %}
                                                {% set garcons = garcons + 1 %}
                                            {% endif %}
                                        {% endfor %}
